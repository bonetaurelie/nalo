{% extends "OCCoreBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Contact
{% endblock %}

{% block body %}
    <div class="container">
        <div class="main">
            <div class="contacter">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <h1 class="text-center">CONTACTER L'ASSOCIATION</h1>
                    </div>
                </div>
                {% for message in app.session.flashBag.get("notice") %}
                    {% include '@OCCore/flashMessageBloc.html.twig' with {'type':'info', 'message': message} %}
                {% endfor %}
                {% for message in app.session.flashBag.get("error") %}
                    {% include '@OCCore/flashMessageBloc.html.twig' with {'type':'danger', 'message': message} %}
                {% endfor %}

                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-md-6">
                        <p>Si vous avez une question ou une demande, envoyez-nous un message à l'aide du formulaire suivant:</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.prenom, "Votre prénom", {'label_attr': {'class': 'control-label'}}) }}
                            <div class="">
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.nom, "Votre nom", {'label_attr': {'class': 'control-label'}}) }}
                            <div class="">
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.email, "Votre adresse mail", {'label_attr': {'class': 'control-label'}}) }}
                            <div class="">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.message, "Votre message", {'label_attr': {'class': 'control-label'}}) }}
                            <div class="">
                                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'style': 'height:103px;'}}) }}
                                {{ form_errors(form.message) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="">
                                {{ form_widget(form.recaptcha, { 'attr': {
                                    'options' : {
                                        'theme': 'light',
                                        'type': 'image',
                                        'size': 'normal'
                                    },
                                } }) }}
                                {{ form_errors(form.recaptcha) }}
                            </div>
                        </div>
                        <button type="submit" class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-sm-offset-6 col-xs-offset-5 btn btn-default">Envoyer</button>
                    </div>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}

                <div class="col-lg-12 col-md-12">
                    <div class="row">
                        <h2 class="text-center">COORDONNEES DE L'ASSOCIATION</h2>
                        <div class=" carte col-lg-offset-3 col-lg-4 col-md-pull-2 col-md-4 col-sm-offset-3 col-xs-offset-2 col-sm-6 col-xs-6">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d11430.186855804339!2d5.139300071919783!3d44.257570911188076!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sfr!2sfr!4v1469015680600" width="400" height="250" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </div>
                        <div class="col-lg-pull-1 col-md-offset-1 col-sm-offset-3 col-xs-offset-2 col-lg-4 col-md-4 col-sm-6 col-xs-6" itemscope itemtype="http://schema.org/LocalBusiness">
                            <p itemprop="brand"><b>Nos amis les oiseaux</b></p>
                            <p itemprop="address">Rue Edith Piaf <br> 84110 Faucon</p><br/>
                            <p>Tel : <span itemprop="telephone">06.12.34.56.78</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
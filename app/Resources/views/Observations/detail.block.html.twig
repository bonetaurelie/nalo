{% trans_default_domain 'AppBundle' %}
<div class="row">
    <div id="map" class="carte cartedetail col-lg-offset-1 col-md-offset-1 col-sm-offset-2 col-xs-offset-1 col-lg-6 col-md-6 col-sm-8 col-xs-8">
        {#<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d11380599.83893024!2d-6.7798041561623155!3d45.86197048753587!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd54a02933785731%3A0x6bfd3f96c747d9f7!2sFrance!5e0!3m2!1sfr!2sfr!4v1469306493238" width="500" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>#}
    </div>
    <div id="observation" data-latitude="{{ observation.locality.latitude }}" data-longitude="{{ observation.locality.longitude }}" class="info col-lg-offset-7 col-md-offset-8 col-sm-offset-2 col-xs-offset-2 col-sm-8 col-xs-8">
        <h1>{{ 'observations.detail.title'|trans({'%date%': observation.datetimeObservation|date('d/m/Y'), '%hour%': observation.datetimeObservation|date('H:i')  }) }}</h1>
        <p>{{ 'observations.detail.subtitle'|trans({'%locality%': observation.locality.adminName, '%author%': observation.author.fullName}) }}</p>
        <h2>{{ observation.species.frenchName }} ({{ observation.species.latinName }})</h2>
        <p>{{ observation.comment }}</p>
    </div>
    {% if observation.images.count() > 0 %}
    <div class="photos">
        <ul>
            {% for image in observation.images %}
            <li>
                <img src="{{ vich_uploader_asset(image, 'file') }}" alt="{{ image.alt }}" />
            </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
</div>
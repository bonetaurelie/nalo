{% extends "profile.layout.html.twig" %}
{% trans_default_domain 'AppBundle'  %}
{% block title %}
    {{ parent() }} - {{ 'observations.validation.list_to_validate.title'|trans }}
{% endblock %}

{% block body_member_space %}
    <div class="row">
        <div class="blockobs">
            <h1 class="titreval col-md-offset-4 col-xs-offset-1">{{ 'observations.validation.list_to_validate.title'|trans|upper }}</h1>
            {#<p class="tri col-xs-offset-6 col-sm-5 col-md-offset-6 col-lg-offset-6">Afficher la liste par:</p>#}

            <div class="responsive-table-line">
                <table class="table table-bordered table-condensed table-body-center">
                    <thead>
                    <tr>
                        <th>{{ 'observations.table.date'|trans }}</th>
                        <th>{{ 'observations.table.city'|trans }}</th>
                        <th>{{ 'observations.table.species'|trans }}</th>
                        <th>{{ 'observations.table.action'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for observation in pagination %}
                    <tr>
                        <td>{{ observation.datetimeObservation|date('d/m/Y') }}</td>
                        <td>{{ observation.locality.adminName }}</td>
                        <td>{{ observation.species.frenchName }}</td>
                        <td data-title="Actions"><a class="text-center btn btn-default" href="{{ path('app_observation_validate', {'id': observation.id }) }}" role="button">Voir</a></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {# display navigation #}
            <div class="navigation pull-right">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>

{% endblock body_member_space %}
{% extends "profile.layout.html.twig" %}

{% block title %}
    {{ parent() }} - OBSERVATIONS A VALIDER
{% endblock %}

{% block body_member_space %}
    <div class="row">
        <div class="blockobs">
            <h1 class="titreval col-md-offset-4 col-xs-offset-1">OBSERVATIONS A VALIDER</h1>
            <p class="tri col-xs-offset-6 col-sm-5 col-md-offset-6 col-lg-offset-6">Afficher la liste par:</p>

            <div class="responsive-table-line">
                <table class="table table-bordered table-condensed table-body-center">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Commune</th>
                        <th>Esp√®ce</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for observation in pagination %}
                    <tr>
                        <td>{{ observation.datetimeObservation|date('d/m/Y') }}</td>
                        <td>{{ observation.locality.adminName }}</td>
                        <td>{{ observation.species.frenchName }}</td>
                        <td data-title="Actions"><a class="text-center btn btn-default" href="#" role="button">Voir</a></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {# display navigation #}
            <div class="navigation pull-right">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>

{% endblock body_member_space %}
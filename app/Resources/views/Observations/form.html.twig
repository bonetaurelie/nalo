{{ form_start(form) }}
{% trans_default_domain 'AppBundle' %}
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            {{ form_label(form.datetimeObservation) }}
            <div class="col-lg-8">
                {{ form_widget(form.datetimeObservation) }}
                {{ form_errors(form.datetimeObservation) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.department) }}
            <div class="col-lg-8">
                {{ form_widget(form.department) }}
                {{ form_errors(form.department) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.city) }}
            <div class="col-lg-8">
                {{ form_widget(form.city) }}
                {{ form_errors(form.city) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.species, null, {'label_attr': {'class': 'col-lg-4'}}) }}
            {{ form_widget(form.species) }}
            {{ form_errors(form.species) }}
        </div>
        <button type="submit" class="btn btn-default">{{ 'observation.form.add_submit'|trans }}</button>
    </div>
</div>

{{ form_end(form) }}
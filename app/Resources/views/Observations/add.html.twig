{% extends "layout.html.twig" %}

{% block title %}
    {{ parent() }} - Saisie
{% endblock %}

{% block body %}
    <div class="container">
        <div class="main">
            <div class="row">
                <div class="enregistrement col-12">
                    <h1 class="text-center">SAISIE D'UNE OBSERVATION</h1>
                    <p class="text-center">Saisissez les informations relatives Ã  votre observation, ajoutez la position sur la carte puis cliquez sur envoyer.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="well">
                        {% include 'Observations/form.html.twig' %}
                    </div>
                </div>
            </div>

{% extends "layout.html.twig" %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker3.min.css') }}">
{% endblock %}

{% block title %}
    {{ parent() }} - Recherche
{% endblock %}

{% block body %}
    <div class="container">
        <div class="main">
            <div class="recherche">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="text-center">RECHERCHE</h1>
                        <p class="text-center">Saisissez vos critères et consultez vos résultats.</p><br/>
                    </div>
                </div>
                <div class="row">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="well col-lg-12">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group col-lg-4">
                                    <label class="control-label">Période</label>
                                </div>
                                <div class="form-group col-lg-4">
                                    {{ form_label(form.datedebut, "Entre le", {'label_attr': {'class': 'col-lg-4'}}) }}
                                    {{ form_errors(form.datedebut) }}
                                    <div class="input-group col-lg-8">
                                        {{ form_widget(form.datedebut) }}
                                        <div class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-4">
                                    {{ form_label(form.datefin, "et le", {'label_attr': {'class': 'col-lg-4'}}) }}
                                    {{ form_errors(form.datefin) }}
                                    <div class="input-group col-lg-8">
                                        {{ form_widget(form.datefin) }}
                                        <div class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-12">
                                {{ form_label(form.geo, "Sélectionnez un critère géographique", {'label_attr': {'class': 'col-lg-4'}}) }}
                                {{ form_errors(form.geo) }}
                                <div class="col-lg-8">
                                    {{ form_widget(form.geo) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-12">
                                {{ form_label(form.commune, "Sélectionnez une commune", {'label_attr': {'class': 'col-lg-4'}}) }}
                                {{ form_errors(form.commune) }}
                                <div class="col-lg-8">
                                    {{ form_widget(form.commune) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-12">
                                {{ form_label(form.species, null, {'label_attr': {'class': 'col-lg-4'}}) }}
                                {{ form_errors(form.species) }}
                                {{ form_widget(form.species) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            {{ form_rest(form) }}
                            <button type="submit" class="btn-lg btn-default">{{ 'search.submit'|trans({}, 'AppBundle')|upper }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>


                <div class="row col-lg-6 col-md-6">
                    <div class="result col-lg-pull-3 col-md-pull-4 col-sm-offset-2 col-xs-offset-1 col-lg-4 col-md-6 col-sm-8 col-xs-8">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d11377536.803269157!2d-6.785122310328994!3d45.87693233762985!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd54a02933785731%3A0x6bfd3f96c747d9f7!2sFrance!5e0!3m2!1sfr!2sfr!4v1469293260473" width="500" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                </div>

                <div class="row col-lg-6 col-md-6">
                    <div class="resulttext col-lg-push-4 col-md-push-5 col-sm-offset-2 col-xs-offset-2 col-lg-8 col-md-6 col-sm-10 col-xs-6">
                        <ul>
                            <li>
                                <h2>Date</h2>
                                <h3>Commune</h3>
                                <p>Espèce</p>
                            </li>
                        </ul>
                    </div>

                    <nav class="col-lg-offset-5 col-md-offset-7 col-lg-5 col-md-6 hidden-sm hidden-xs">
                        <ul class="pagination">
                            <li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2 </a></li>
                            <li><a href="#">3 </a></li>
                            <li class="disabled"><a href="#" aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
                        </ul>
                    </nav>
                    <a class="text-center col-xs-offset-4 col-sm-4 col-xs-4 hidden-lg hidden-md btn-lg btn-default" href="#" role="button">Resultats suivants</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



{% block javascript %}
    {{ parent() }}
    <script src="{{ asset ('js/bootstrap-datepicker.min.js') }}"></script>
    <script type="text/javascript">

        $(function () {
            $('#recherche_datedebut').datepicker({
                format: "dd/mm/yyyy",
                language: "fr",
                autoclose: true
            });
            $('#recherche_datefin').datepicker({
                format: "dd/mm/yyyy",
                language: "fr",
                autoclose: true
            });

            $('[data-toggle="popover"]').popover({'trigger':'hover'});
        });
    </script>
{% endblock %}
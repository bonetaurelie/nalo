{% extends "layout.html.twig" %}

{% trans_default_domain('AppBundle') %}

{% block title %}
    {{ parent() }} - {{ 'contact.title_page'|trans }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="main">
            <div class="contacter">
                    <div class="text-center">
                        <h1>{{ 'contact.title_page'|trans|upper }}</h1>
                    </div>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                    <div class="text-center contact">
                        <p>{{ 'contact.text'|trans }}</p>
                    </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.prenom) }}
                        {{ form_row(form.nom) }}
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.message, { 'attr': {'style': 'height:134px;'} }) }}
                        {{ form_row(form.recaptcha) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn-lg btn-default">Envoyer</button>
                    </div>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}

                <div class="coordonnees text-center">
                    <h2>COORDONNÉES DE L'ASSOCIATION</h2>
                    <div class="carte col-md-6">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d11430.186855804339!2d5.139300071919783!3d44.257570911188076!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sfr!2sfr!4v1469015680600" width="400" height="250" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                    <div class="adresse col-md-6" itemscope itemtype="http://schema.org/LocalBusiness">
                        <p itemprop="brand"><b>NOS AMIS LES OISEAUX</b></p>
                        <p itemprop="address">Rue Édith Piaf <br> 84110 Faucon</p><br/>
                        <p>Tel : <span itemprop="telephone">06 12 34 56 78</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
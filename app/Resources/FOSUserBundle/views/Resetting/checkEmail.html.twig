{% extends "layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block title %}
    {{ parent() }} - {{ 'resetting.check_email.title'|trans }}
{% endblock title %}
{% block body %}
    <div class="container">
        <div class="main">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="mdp text-center">{{ 'resetting.check_email.title'|trans|upper }}</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 well">
                    <p >{{ 'resetting.check_email'|trans({'%email%': email}) }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}